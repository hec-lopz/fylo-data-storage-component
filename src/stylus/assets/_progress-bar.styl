.progress-container__bar-container
    @extend $flex-column
    width: 80%
    margin-top: top-margin

    .progress-container__bar
        width: 100%
        height 20px
        position: relative
        // padding: 2px
        border-radius: 50px
        background-color: #161e4c

        &-meter
            content: ""
            display: block
            position: absolute
            z-index: 0
            top: 2px
            bottom: 2px
            left 2px
            right 18.5%
            border-radius: 50px
            background: color--primary
            &::after
                content: ""
                display: block
                position: absolute
                top .5px
                bottom: 0
                width: 15px
                height: 15px
                border-radius: 50%
                right .5px
                background-color: color--pale-blue
    .labels
        display: flex
        justify-content: space-between
        font-size: 12px
        margin-top: 5px